  <!-- ********************************************************************-->

  <HelpTopic Subject="plotting one or more 2D points" SearchKey="plot2dPoints">

    <Content>
      <Line>"plot (xCoordinates, yCoordinates, options);"</Line>
      <Line>"  xCoordinates - single number or a vector of x coords"</Line>
      <Line>"  yCoordinates - single number or a vector of y coords"</Line>
      <Line>"  options - specify the color, size and type of symbol"</Line>
    </Content>
    
    <SubTopics>
      <SubTopic Subject="Available colors"  SearchKey ="plotPoints2d_colors"/>
      <SubTopic Subject="Available symbols" SearchKey ="plotPoints2d_symbols"/>
    </SubTopics>
    
  </HelpTopic>

