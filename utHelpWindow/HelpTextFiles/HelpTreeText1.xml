<!-- 
  Help plotting points and lines in 2D and 3D space 
-->

<HelpTree Subject="General Plotting" SearchKey="ZzZzZ">

  <!--********************************************************************-->
  
  <!-- first node will be root of this HelpTree -->
  
  <HelpTopic Subject="Plotting points and lines" SearchKey="QqQqQplot">
    <Content>
        Plotting 2D or 3D points or lines.
    </Content>

    <SubTopics>
      <SubTopic Subject="Plotting 2D points"     SearchKey="plot2dPoints"/>
      <SubTopic Subject="Plotting 2D lines"      SearchKey="plot2dLines"/>
      <SubTopic Subject="Plotting 3D points"     SearchKey="plot3dPoints"/>
      <SubTopic Subject="Plotting 3D lines"      SearchKey="plot3dLines"/>
    </SubTopics>
  </HelpTopic>

  <!-- ********************************************************************-->

  <HelpTopic Subject="Plotting 2D points" SearchKey="plot2dPoints">
    <Content>
        plot (xCoords, yCoords, options);
              xCoords - single number or a row vector of x coords
              yCoords - single number or a row vector of y coord
              options - specify the color, size and type of symbol"

        plot (column vector, column vector, options);

        plot (matrix, options);
    </Content>

    <SubTopics>
      <SubTopic Subject="Colors"  SearchKey="2dPointColors"/>
      <SubTopic Subject="Symbols" SearchKey="2dPointSymbols"/>
    </SubTopics>    
  </HelpTopic>

  <!-- ******************************************************************** -->

  <HelpTopic Subject="Plotting 2D lines" SearchKey="plot2dLines">
    <Content>
      plot (xCoordinates, yCoordinates, options);
        where "options" specify the color, size and type of line
    </Content>

    <SubTopics>
      <SubTopic Subject="Colors"  SearchKey ="2dLineColors"/>
      <SubTopic Subject="Symbols" SearchKey ="2dLineSymbols"/>
    </SubTopics>
    
  </HelpTopic>


  <!-- ******************************************************************** -->

  <HelpTopic Subject="Plotting 3D points" SearchKey="plot3dPoints">
    <Content>
      plot (xCoordinates, yCoordinates, zCoordinates, options);
        xCoordinates - single number or a vector of x coords
        yCoordinates - single number or a vector of y coords
        zCoordinates - single number or a vector of z coords
        options - specify the color, size and type of symbol
    </Content>

    <SubTopics>
      <SubTopic SearchKey ="3dPointColors"/>
      <SubTopic SearchKey ="3dPointSymbols"/>
    </SubTopics>

  </HelpTopic>

  <!-- ******************************************************************** -->

  <HelpTopic Subject="Plotting 3D lines" SearchKey="plot3dLines">

    <Content>
      plot (xCoordinates, yCoordinates, zCoordinates, options);
        where "options" specify the color, size and type of line
    </Content>

    <SubTopics>
      <SubTopic SearchKey ="3dLineColors"/>
      <SubTopic SearchKey ="3dLineSymbols"/>
    </SubTopics>

  </HelpTopic>

